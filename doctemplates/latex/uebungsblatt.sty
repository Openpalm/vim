% LaTeX2e style file um Loesungsblaetter zu Uebungen zu generieren.
 
\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{uebungsblatt}

\usepackage{amsmath}
\usepackage{a4wide}

\setlength{\parindent}{0pt}
\setlength{\parskip}{0.5ex}

\newcommand{\uebkopfzeile}[4]{
  \begin{center}
    \begin{bf}
      #1 \hfill #2\\
      #3 \hfill #4\\
    \end{bf}
  \end{center}
}

\newcommand{\uebtitel}[2]{
  \begin{center}
    \begin{bf}
      \bigskip
      {\LARGE #1}\\
    \end{bf}
    \textit{(Abgabe: #2)}
  \end{center}
}

\newcommand{\solution}[3]{
  \begin{center}
    \begin{bf}
      L\"osung zu Aufgabe #1: {\it #2}\hfill [ \quad ] von #3 Punkten\\
    \end{bf}
  \end{center}
}
